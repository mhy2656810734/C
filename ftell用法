#include<stdio.h>
int main()
{
	FILE* pf = fopen("shuaige.txt", "r");
	if (pf = NULL)
	{
		perror("open file text.dat");
		return 0;
	}
	/*fseek   定位文件指针*/
	fseek(pf, -2, SEEK_END);//SEEK_CUR 文件当前位置    SEEK_END 文件末尾   SEEK_SET 文件起始位置
	int ch = fgetc(pf);
	printf("%c\n", ch);
	int pos = ftell(pf);
	printf("%d\n", pos);
	fclose(pf);
	pf = NULL;
	return 0;
}
